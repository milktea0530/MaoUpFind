<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 毛起來找</title>
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/Jquery/jquery-3.5.1.min.js"></script>
    <link href="~/Content/basic.css" rel="stylesheet" />
    <link href="~/Content/header.css" rel="stylesheet" />
    <link href="~/Content/footer.css" rel="stylesheet" />
    <link rel="icon" type="image/svg" href="~/Images/svg/logo2.svg" />
    @* 跑馬燈 *@
    <script src="~/Scripts/Jquery/jquery-vertical-loop.js"></script>
    <script src="~/Scripts/verticalLoop.js"></script>
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
        var message = @Html.Raw(Json.Encode(TempData["message"]));
            alert(message);
            TempData["message"] = null;
        </script>
    }
</head>
<body>

        
    @Html.Partial("_Header") 

    <div class="container body-content min-vh-100">
        @RenderBody()
    </div>
    @Html.Partial("_Footer")
    <script src="~/Scripts/Bootstrap/bootstrap.min.js"></script>
</body>
</html>