@model MaoUpFind.ViewModels.MemberCenter.VM修改信箱

@using (Html.BeginForm("Form3", "MemberCenter"))
{
    @Html.AntiForgeryToken()

    <!--變更密碼-->
    <div id="tab03" class="tab-inner row justify-content-center">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.會員編號, new { })


        <div class="row mb-3 col-md-10">
            <div class="col-md-3"><nobr>會 員 信 箱</nobr></div>
            <div class="col-md-9">
                @*<input type="text" id="" class="form-control" placeholder="請輸入密碼">*@
